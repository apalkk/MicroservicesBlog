@{
    ViewData["Title"] = "Login Page";
}

<h1>You can post from here</h1>
@using (Html.BeginForm("Post", "Home", FormMethod.Post))
{
    <div>
        @Html.Label("Title:")
        @Html.TextBox("title")
    </div>
    <div>
        @Html.Label("Content:")
        @Html.TextBox("content")
    </div>
    <div>
        <input type="submit" value="Login" />
    </div>
}
